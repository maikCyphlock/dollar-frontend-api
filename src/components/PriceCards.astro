---
const response = await fetch("https://dolar-api.maikolaguilar656.workers.dev/");
const data = await response.json();
const { exchange_rate } = data;
console.log(exchange_rate);
---

<main class="grid-card">
  {
    exchange_rate?.map(
      (dolar: {
        urlname: string;
        bank: string;
        buying: number;
        selling: number;
      }) => (
        <div class="dolar-card">
          <img
            src={`./${dolar.urlname}.webp`}
            alt={dolar.urlname}
            class="dolar-logo"
          />
          <h2 class="dolar-origin">{dolar.bank}</h2>
          <div class="dolar-pricing">
            <h3 class="dolar-price">
              {" "}
              {Intl.NumberFormat("es-VE", {
                style: "currency",
                currency: "ves",
              }).format(dolar.selling)}
            </h3>
            <span class="dolar-variation">variaci√≥n:</span>
            <h4>
              {Intl.NumberFormat("es-VE", {
                style: "currency",
                currency: "ves",
              }).format(dolar.selling)}
            </h4>
          </div>
        </div>
      )
    )
  }
</main>
