---
const response = await fetch("https://dolar-api.maikolaguilar656.workers.dev/");
const history = await fetch(
  "https://dolar-api.maikolaguilar656.workers.dev/history"
);
import TremorCard from "./TremorCard";
const data = await response.json();
const history_data = await history.json();
const { exchange_rate } = data;
---

<main class="grid grid-cols-3 gap-4 p-2">
  {
    exchange_rate?.map(
      (dolar: {
        urlname: string;
        bank: string;
        buying: number;
        selling: number;
      }) => (
        <TremorCard
          history={history_data}
          bank={dolar.bank}
          urlname={dolar.urlname}
          client:load
        />
      )
    )
  }
</main>
<div class="container mx-auto"></div>
